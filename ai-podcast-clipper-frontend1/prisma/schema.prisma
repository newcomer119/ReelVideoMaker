// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    // NOTE: When using mysql or sqlserver, uncomment the @db.Text annotations in model Account below
    // Further reading:
    // https://next-auth.js.org/adapters/prisma#create-the-prisma-schema
    // https://www.prisma.io/docs/reference/api-reference/prisma-schema-reference#string
    url      = env("DATABASE_URL")
}

model Post {
    id        Int      @id @default(autoincrement())
    name      String
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    createdBy   User   @relation(fields: [createdById], references: [id])
    createdById String

    @@index([name])
}

// Necessary for Next auth
model Account {
    id                       String  @id @default(cuid())
    userId                   String
    type                     String
    provider                 String
    providerAccountId        String
    refresh_token            String? // @db.Text
    access_token             String? // @db.Text
    expires_at               Int?
    token_type               String?
    scope                    String?
    id_token                 String? // @db.Text
    session_state            String?
    user                     User    @relation(fields: [userId], references: [id], onDelete: Cascade)
    refresh_token_expires_in Int?

    @@unique([provider, providerAccountId])
}

model Session {
    id           String   @id @default(cuid())
    sessionToken String   @unique
    userId       String
    expires      DateTime
    user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
    id            String         @id @default(cuid())
    name          String?
    email         String?        @unique
    emailVerified DateTime?
    password      String?
    credits       Int @default(10)
    image         String?
    accounts      Account[]
    sessions      Session[]
    posts         Post[]
    UploadedFile  UploadedFile[]
    Clip          Clip[]
    EditRecord    EditRecord[]
    ChatMessage   ChatMessage[]
}

model UploadedFile {
    id          String   @id @default(cuid())
    s3Key       String
    displayName String?
    uploaded    Boolean  @default(false)
    status      String   @default("queued") // processing, processed, no credits
    createdAt   DateTime @default(now())
    updatedAt   DateTime @updatedAt

    clips       Clip[]
    transcript  Transcript?
    edits       EditRecord[]
    chatMessages ChatMessage[]

    user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
    userId String

    @@index([s3Key])
}

model Clip {
    id    String @id @default(cuid())
    s3Key String

    // Clip metadata
    hook           String?
    reason         String?
    startTime      Float?
    endTime        Float?
    viralityScore  Int?
    clipIndex      Int?

    // Versioning
    isOriginal    Boolean @default(true)
    originalClipId String? // Points to original clip if this is an edited version
    version       Int      @default(1) // Version number

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    uploadedFile   UploadedFile? @relation(fields: [uploadedFileId], references: [id], onDelete: Cascade)
    uploadedFileId String?

    user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
    userId String

    edits     EditRecord[]
    versions  Clip[] @relation("ClipVersions")
    original  Clip? @relation("ClipVersions", fields: [originalClipId], references: [id])

    @@index([s3Key])
    @@index([uploadedFileId])
    @@index([originalClipId])
}

model EditRecord {
    id    String @id @default(cuid())
    
    // Edit details
    editType      String // trim, split, merge, adjust_timing, remove, extend
    description   String
    startTime     Float
    endTime       Float
    newStartTime  Float?
    newEndTime    Float?
    splitPoint    Float?
    
    // Status
    status        String @default("pending") // pending, applied, failed, cancelled
    appliedAt     DateTime?
    
    // Relations
    clip          Clip? @relation(fields: [clipId], references: [id], onDelete: Cascade)
    clipId        String?
    
    uploadedFile   UploadedFile @relation(fields: [uploadedFileId], references: [id], onDelete: Cascade)
    uploadedFileId String
    
    user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
    userId String
    
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
    
    @@index([clipId])
    @@index([uploadedFileId])
    @@index([userId])
}

model ChatMessage {
    id    String @id @default(cuid())
    
    // Message content
    role      String // "user" or "assistant"
    content   String
    query     String? // Original query for user messages
    
    // Edit plans (stored as JSON)
    editPlans Json?
    
    // Citations (stored as JSON)
    citations Json?
    
    // Relations
    uploadedFile   UploadedFile? @relation(fields: [uploadedFileId], references: [id], onDelete: Cascade)
    uploadedFileId String?
    
    user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
    userId String
    
    createdAt DateTime @default(now())
    
    @@index([userId])
    @@index([uploadedFileId])
    @@index([createdAt])
}

model Transcript {
    id    String @id @default(cuid())
    
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    uploadedFile   UploadedFile @relation(fields: [uploadedFileId], references: [id], onDelete: Cascade)
    uploadedFileId String @unique

    segments TranscriptSegment[]

    @@index([uploadedFileId])
}

model TranscriptSegment {
    id    String @id @default(cuid())
    
    start     Float
    end       Float
    text      String
    words     Json? // Store word-level timestamps as JSON array
    embedding Json? // Store embeddings as JSON array (1536 dimensions) - can convert to vector later

    transcript   Transcript @relation(fields: [transcriptId], references: [id], onDelete: Cascade)
    transcriptId String

    createdAt DateTime @default(now())

    @@index([transcriptId])
    @@index([start])
}

model VerificationToken {
    identifier String
    token      String   @unique
    expires    DateTime

    @@unique([identifier, token])
}
